#!/usr/bin/env ruby

require "bundler/setup"
require "overt"
require "thor"
require "formatador"
require "pry"

class OvertCommand < Thor  
  def self.exit_on_failure?
    true
  end

  desc "clean", "Remove all files in OVERT_BUILD_DIR"
  method_options :quiet => :boolean
  def clean
    console.quiet(true) if options[:quiet]
    print_command_header('clean')
    
    do_clean
  end
  
  desc "build", "Build the site, outputs to OVERT_BUILD_DIR"
  method_options :clean => :boolean, :quiet => :boolean
  def build
    console.quiet(true) if options[:quiet]
    print_command_header('build')

    console.line("source_dir: [bold]#{Overt::Config[:source_dir]}[/]")
    console.line("build_dir: [bold]#{Overt::Config[:build_dir]}[/]")
    console.line("")
    
    if options[:clean]
      do_clean
    end
    
    
    start_time = Process.clock_gettime(Process::CLOCK_MONOTONIC)
    results = Overt.build(console: console)
    end_time = Process.clock_gettime(Process::CLOCK_MONOTONIC)
    elapsed = ((end_time - start_time) * 1000).round(0)
    
    
    console.line('')
    console.line("[green][bold]Built #{results.length} files[/] [green]in #{elapsed}ms[/]")
  end
  
  desc "v", "Prints version number"
  def v
    puts Overt::VERSION
  end
  
  private
  
  def console
    @console ||= Overt::ConsoleOutput.new
  end
  
  def do_clean
    console.line("[bold][red]Cleaning ./#{Pathname.new(Overt::Config[:build_dir])}[/]")
    console.line("")

    Overt.clean
  end
  
  def print_command_header(command)
    console.line("")
    console.line("ðŸ‘€ [bold][light_blue]overt #{command}[/] #{Overt::VERSION}")
    console.line("[light_black]------[/]")
    console.line("")
  end
  
end

OvertCommand.start
